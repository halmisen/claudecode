# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Binance API Configuration (for data download)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Optional: Rate limiting settings
API_RATE_LIMIT=1200
REQUEST_TIMEOUT=30

# Data Storage Configuration
DATA_ROOT_PATH=backtester/data
MAX_FILE_SIZE_MB=100

# Backtesting Configuration
DEFAULT_INITIAL_CASH=500
DEFAULT_LEVERAGE=4
DEFAULT_RISK_PCT=0.20

# Logging and Output
LOG_LEVEL=INFO
OUTPUT_DIR=results
PLOTS_DIR=plots

# Performance Tracking
ENABLE_TASK_STATS=true
TASK_STATS_DIR=results/task_stats

# Development Settings
DEBUG_MODE=false
ENABLE_PROFILING=false

# Security Settings
SAFE_MODE=true
VALIDATE_INPUTS=true

# Platform-specific settings (optional)
# SHELL_TYPE=powershell  # or bash
# PATH_SEPARATOR=\  # or /