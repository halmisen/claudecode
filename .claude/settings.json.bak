{
  "hooks": {
    "PreToolUse": {
      "Write": "python .claude/hooks/pre_tool_use.py",
      "Edit": "python .claude/hooks/pre_tool_use.py", 
      "Bash": "python .claude/hooks/pre_tool_use.py",
      "MultiEdit": "python .claude/hooks/pre_tool_use.py"
    }
  },
  "interception_config": {
    "default_mode": "normal",
    "trigger_keywords": [
      "复杂任务", "批量操作", "规划模式", "planning mode",
      "大型重构", "多文件操作", "自动化流程", 
      "这是一个复杂任务", "使用规划模式", "启用协作模式"
    ],
    "control_commands": {
      "/planning-on": "激活规划模式",
      "/planning-off": "关闭规划模式", 
      "/planning-status": "查看当前模式状态"
    },
    "bypass_keywords": [
      "简单修改", "快速修复", "单文件操作", "直接执行",
      "normal mode", "bypass planning"
    ]
  },
  "blocked_tools": {
    "bash": {
      "enabled": false,
      "exceptions": ["git status", "git diff", "git log", "ls", "dir", "pwd"],
      "message": "Bash命令已拦截，已记录到执行计划"
    },
    "write": {
      "enabled": false,
      "message": "文件写入已拦截，已记录到执行计划"
    },
    "edit": {
      "enabled": false, 
      "message": "文件编辑已拦截，已记录到执行计划"
    }
  },
  "project_config": {
    "dev_doc_path": "开发文档.md",
    "logs_path": "logs/",
    "plan_size_limit": 10240,
    "auto_increment_version": true,
    "mode_state_file": ".claude/planning_mode.state"
  }
}